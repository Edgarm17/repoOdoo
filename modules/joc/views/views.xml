<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="joc.llista_jugadors">
      <field name="name">Llista jugadors</field>
      <field name="model">joc.jugador</field>
      <field name="arch" type="xml">
        <tree>
          <field name="image" widget="image"/>
          <field name="name"/>
          <field name="gold"/>
          <field name="ferro"/>
          <field name="madera"/>
          <field name="pedra"/>
          <field name="atac"/>
          <field name="defensa"/>
          <field name="nivell"/>
        </tree>
      </field>
    </record>


    <record model="ir.ui.view" id="joc.form_jugador">
      <field name="name">Formulari jugadors</field>
      <field name="model">joc.jugador</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group string="Dades jugador">
                <field name="image" widget="image" style="width:50px;"/>
                <field name="name"/>
                <field name="gold"/>
                <field name="ferro"/>
                <field name="madera"/>
                <field name="pedra"/>
                <field name="atac"/>
                <field name="defensa"/>
                <field name="nivell"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="joc.jugador_action_window">
      <field name="name">Jugador</field>
      <field name="res_model">joc.jugador</field>
      <field name="view_mode">tree,form</field>
    </record>


