<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="game.lista_jugadores">
      <field name="name">lista jugadores</field>
      <field name="model">game.jugador</field>
      <field name="arch" type="xml">
        <tree>
          <field name="imagen" widget="image"/>
          <field name="nombre"/>
          <field name="raza"/>
          <field name="bando"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="game.form_jugador">
      <field name="name">formulario jugadores</field>
      <field name="model">game.jugador</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group string="datos Jugador">
                <field name="imagen" widget="image" style="width:50px;"/>
                <field name="nombre"/>
                <field name="raza"/>
                <field name="bando"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>




    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="game.action_window">
      <field name="name">game</field>
      <field name="res_model">game.game</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="game.jugador_action_window">
      <field name="name">Jugador</field>
      <field name="res_model">game.jugador</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Lord Of The Rings Game" id="game.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Admin" id="game.menu_1" parent="game.menu_root"/>


    <!-- actions -->

    <menuitem name="Jugadores" id="game.menu_jugador" parent="game.menu_1"
              action="game.jugador_action_window"/>
    <menuitem name="Recursos" id="game.menu_1_recursos" parent="game.menu_1"
              action="game.action_window"/>


  </data>
</odoo>